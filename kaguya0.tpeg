/*
動詞の未然形活用
未然形はほぼ確実に助動詞が繋がるため先読みで誤マッチを抑制している
これで「止まる」の先頭文字列「止ま」が「止む」の未然形「止ま」にマッチしない
以下、他の活用も同様
*/
Mizen = {
      {VERB5KA [かこ] #Mizen} &AFTERV5MIZEN
    / {VERB5SA [さそ] #Mizen} &AFTERV5MIZEN
    / {VERB5TA [たと] #Mizen} &AFTERV5MIZEN
    / {VERB5NA [なの] #Mizen} &AFTERV5MIZEN
    / {VERB5MA [まも] #Mizen} &AFTERV5MIZEN
    / {VERB5RA [らろ] #Mizen} &AFTERV5MIZEN
    / {VERB5WA [わお] #Mizen} &AFTERV5MIZEN
    / {VERB5GA [がご] #Mizen} &AFTERV5MIZEN
    / {VERB5BA [ばぼ] #Mizen} &AFTERV5MIZEN
    / {VERB5KASOKU [かこ] #Mizen} &AFTERV5MIZEN
    / {SAHEN_SURU [さ] #Mizen} &AFTERVSAMIZEN
    / {SAHEN_ZURU [ざ] #Mizen} &AFTERVSAMIZEN
    / {(KANJI/KATA)* [さ] #Mizen} &AFTERVSAMIZEN
    #LookAHead
}

Renyo = {
      {VERB5KA [きい] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {VERB5SA [し] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {VERB5TA [ちっ] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {VERB5NA [にん] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {VERB5MA [みん] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {VERB5RA [りっ] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {VERB5WA [いっ] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {VERB5GA [ぎい] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {VERB5BA [びん] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {VERB5KASOKU [きっ] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {KAHEN? [き] #Renyo} &(AFTERVKARENYO/[てで]/Verb/TEN)
    #LookAHead
}

SyushiRentai = {
      {VERB5KA [く] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB5SA [す] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB5TA [つ] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB5NA [ぬ] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB5MA [む] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB5RA [る] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB5WA [う] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB5GA [ぐ] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB5BA [ぶ] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB5KASOKU [く] #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {VERB1 [る] #SyushiRentai} &(AFTERV1SYUSHI/AFTERV1RENTAI/Noun/POSTP/EOL)
    / {KAHEN? ('くる' / '来る') #SyushiRentai} &(AFTERVKASYUSHI/AFTERVKARENTAI/Noun/POSTP/EOL)
    / {SAHEN_SURU 'する' #SyushiRentai} &(AFTERVSASYUSHI/AFTERVSARENTAI/Noun/POSTP/EOL)
    / {SAHEN_ZURU 'ずる' #SyushiRentai} &(AFTERVSASYUSHI/AFTERVSARENTAI/Noun/POSTP/EOL)
    / {(KANJI/KATA)* 'する' #SyushiRentai} &(AFTERVSASYUSHI/AFTERVSARENTAI/Noun/POSTP/EOL)
    #LookAHead
}

Katei = {
      {VERB1 [れ] #Katei} &'ば'
    / {KAHEN? ('くれ' / '来れ') #Katei} &'ば'
    / {SAHEN_SURU 'すれ' #Katei} &'ば'
    / {SAHEN_ZURU 'ずれ' #Katei} &'ば'
    / {(KANJI/KATA)+ 'すれ' #Katei} &'ば'
    #LookAHead
}

Meirei = {
      {VERB1 [ろよ] #Meirei} &EOL
    / {KAHEN? ('こい' / '来い') #Meirei} &EOL
    / {SAHEN_SURU ('しろ' / 'せよ') #Meirei} &EOL
    / {SAHEN_ZURU ('じろ' / 'ぜよ') #Meirei} &EOL
    / {(KANJI/KATA)+ ('しろ' / 'せよ') #Meirei} &EOL
    #LookAHead
}

KateiMeirei = {
      {VERB5KA [け] #KateiMeirei} &('ば'/EOL)
    / {VERB5SA [せ] #KateiMeirei} &('ば'/EOL)
    / {VERB5TA [て] #KateiMeirei} &('ば'/EOL)
    / {VERB5NA [ね] #KateiMeirei} &('ば'/EOL)
    / {VERB5MA [め] #KateiMeirei} &('ば'/EOL)
    / {VERB5RA [れ] #KateiMeirei} &('ば'/EOL)
    / {VERB5WA [え] #KateiMeirei} &('ば'/EOL)
    / {VERB5GA [げ] #KateiMeirei} &('ば'/EOL)
    / {VERB5BA [べ] #KateiMeirei} &('ば'/EOL)
    / {VERB5KASOKU [け] #KateiMeirei} &('ば'/EOL)
    #LookAHead
}

Common = {
      {VERB1 #MizenRenyo} &(AFTERV1MIZEN/AFTERV1RENYO/[てで]/Verb/TEN)
    / {KAHEN? [来] #MizenRenyo} &(AFTERVKAMIZEN/AFTERVKARENYO/[てで]/Verb/TEN)
    / {SAHEN_SURU [し] #MizenRenyo} &(AFTERVSAMIZEN/AFTERVSARENYO/[てで]/Verb/TEN)
    / {SAHEN_ZURU [じ] #MizenRenyo} &(AFTERVSAMIZEN/AFTERVSARENYO/[てで]/Verb/TEN)
    / {(KANJI/KATA)* [し] #MizenRenyo} &(AFTERVSAMIZEN/AFTERVSARENYO/[てで]/Verb/TEN)
    / {KAHEN? [こ] #Mizen} &AFTERVKAMIZEN  // 命令形の活用語尾「こい」との競合避け
    / {SAHEN_SURU [せ] #Mizen} &AFTERVSAMIZEN  // 命令形の活用語尾「せよ」との競合避け
    / {SAHEN_ZURU [ぜ] #Mizen} &AFTERVSAMIZEN  // 命令形の活用語尾「ぜよ」との競合避け
    / {(KANJI/KATA)* [せ] #Mizen} &AFTERVSAMIZEN  // 命令形の活用語尾「せよ」との競合避け
    #LookAHead
}

HiraVerb = {
      {HV [らろ] #Mizen} &AFTERV5MIZEN
    / {HV [りっ] #Renyo} &(AFTERV5RENYO/[てで]/Verb/TEN)
    / {HV 'る' #SyushiRentai} &(AFTERV5SYUSHI/AFTERV5RENTAI/Noun/POSTP/EOL)
    / {HV 'れ' #KateiMeirei} &('ば'/EOL)
    #LookAHead
}
HV = [あい]

/*
活用型ごとの動詞の語幹を辞書から生成
「行く」はカ行五段活用だが、イ音便ではなく促音便で活用が異なるため別枠
*/
VERB5KA = @choice('dic/Verb/VERB5KA.txt')
VERB5SA = @choice('dic/Verb/VERB5SA.txt')
VERB5TA = @choice('dic/Verb/VERB5TA.txt')
VERB5NA = @choice('dic/Verb/VERB5NA.txt')
VERB5MA = @choice('dic/Verb/VERB5MA.txt')
